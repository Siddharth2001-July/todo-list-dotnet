@model IEnumerable<ToDoItem>

<h3 class="display-3">All Items</h3>
@if (Model.Count() == 0)
{
    <p class="lead"> No Items present in the list </p>
}
else
{

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">ToDo-Item</th>
                <th scope="col">Completed On<br>(MM/DD/YYYY HH:MM:SS)</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
      @foreach (var item in Model)
      {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    @if (item.doneOn == null)
                    {
                        <td>Limit not set</td>
                    }
                    else
                    {
                        <td>@item.doneOn</td>
                    }
                    <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a></td>
                    <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>
                </tr>
      }

        </tbody>
    </table>
}